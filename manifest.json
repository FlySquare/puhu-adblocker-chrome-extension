{
  "manifest_version": 3,
  "name": "PuhuTV Reklam Engelleyici",
  "description": "PuhuTV üzerinde içerik izlerken araya giren reklamlardan kurtulabilirsiniz.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://puhutv.com/*"],
      "css": ["assets/style.css"],
      "js": ["assets/script.js"]
    }
  ],
  "browser_action": {
    "default_icon": "image.png",
    "default_popup": "popup.html",
    "default_title": "PuhuTV Ad Blocker"
  }
}